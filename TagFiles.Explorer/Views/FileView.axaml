<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TagFiles.Explorer.Views.FileView">
    <StackPanel Spacing="5">
        <Border CornerRadius="5" ClipToBounds="True">
            <Panel Background="#EEEEEE">
                <Image Stretch="Uniform" Source="{Binding Preview}" />
                <Image Stretch="Uniform" Source="../Assets/file_image.png" MaxWidth="100" MaxHeight="100"
                       IsVisible="{Binding Preview, Converter={x:Static ObjectConverters.IsNull}}" />
                <ItemsControl VerticalAlignment="Bottom" Items="{Binding Tags}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="30" ClipToBounds="True" Background="#393E46" Margin="2">
                                <TextBlock Text="{Binding}" FontSize="12" Padding="8 3" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Panel>
        </Border>
        <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" FontSize="12" />
    </StackPanel>
</UserControl>